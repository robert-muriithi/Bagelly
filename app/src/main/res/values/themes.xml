<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bagelly" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_grey</item>
        <item name="colorPrimaryVariant">@color/light_grey</item>
        <item name="colorOnPrimary">@color/main_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background_color">@color/main_dark</item>
        <item name="splash_screen_bg">@color/white</item>
        <item name="toolbar_logo">@drawable/ic_logo_toolbar</item>
        <item name="toolbar_color">@color/white</item>
        <item name="account_icon">@drawable/ic_account</item>
        <item name="notification_icon">@drawable/ic_notification</item>
        <item name="more_text">@color/light_grey</item>
        <item name="forwad_img">@drawable/ic_forwad</item>
        <item name="search_toolbar_color">@color/light_grey</item>
        <item name="shop_details_toolbar">@color/light_grey</item>
        <item name="light_grey">#F3F3F3</item>
        <item name="profile_card_color">@color/white</item>
        <item name="nav_icon">@drawable/ic_arrow_back</item>
        <item name="splash_screen_image">@drawable/ic_logo</item>
        <item name="text_color">@color/black</item>
        <item name="button_color">@color/white</item>
        <item name="button_text_color">@color/main_dark</item>
    </style>

    <style name="spinner_style" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

</resources>